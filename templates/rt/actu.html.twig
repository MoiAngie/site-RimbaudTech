{% extends 'base.html.twig' %}

{% block title %}Rimbaud' Tech | Actualités{% endblock %}

{% block body %}


<section class="liste_articles">
  <h2>Actualités</h2>
  {% for article in article %}
    <h2 class="title-article">{{ article.title}}</h2>
    <div class="metadata">
      <aside>Ecrit par {{article.author}} le {{ article.createdAt | date('d/m/Y')}}
        à {{ article.createdAt | date('H:i')}}</aside>
    </div>
    <img src="{{asset(article.image)}}"/>
    <div class="article-tx">
      <h5>{{ article.introduction | raw }}<h5>
      <h4>{{ article.sousTitre1}}</h4>
        <p>{{ article.paragraphe1 | raw }}</p>
        <span class="collapsible"></span>

      <div class="art-content">
        <h4>{{ article.sousTitre2}}</h4>
          <p>{{ article.paragraphe2 | raw }}</p>
        <h4>{{ article.sousTitre3}}</h4>
          <p>{{ article.paragraphe3 | raw }}</p>
        <h4>{{ article.sousTitre4}}</h4>
          <p>{{ article.paragraphe4 | raw }}</p>
      </div>
    </div>
    <br/>
    <hr class="dotted">
  {% endfor %}
</section>

<section class="direction-articles">
  <a href="{{ path('articles')}}" class="section__link">
    <button class="section__btn" style="background-color:#c91a5f;">
    Lire tous nos articles
    </button>
  </a>

</section>
<section class="iframes">
  <h2>Suivez-nous sur les réseaux sociaux</h2>

  <div class="iframes">
  <!-- Iframe Twitter -->
    <a class="twitter-timeline"
    href="https://twitter.com/rimbaud_tec?ref_src=twsrc%5Etfw"
    width="30%" height="450px">Tweets by rimbaud_tec</a>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  <!-- Iframe Facebook -->
  <div class="iframe-fb">
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous"
    src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.3"></script>
    <div class="fb-page" data-href="https://www.facebook.com/IncubateurRimbaudTech/"
    data-tabs="timeline, events" data-width="300px" data-height="450px"
    data-small-header="true" data-adapt-container-width="false"data-hide-cover="false"
    data-show-facepile="false"><blockquote cite="https://www.facebook.com/IncubateurRimbaudTech/"
    class="fb-xfbml-parse-ignore">
    <a href="https://www.facebook.com/IncubateurRimbaudTech/">Rimbaud&#039;Tech</a></blockquote></div>
  </div>
  </div>
</section>

<section class="newsletter">
  <h2>Notre newsletter</h2>
  {% include 'rt/newsletter.html.twig' %}
</section>
{% endblock %}
