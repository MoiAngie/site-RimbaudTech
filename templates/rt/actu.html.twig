{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
<h1>Page Actualités</h1>
<button class="section__btn"><a href="{{ path('article')}}">Afficher la page type des articles</a></button>
<button class="section__btn"><a href="{{ path('create-article')}}">Afficher la page de création des articles</a></button>
<section class="liste_articles">
  {% for article in articles %}
    <h2>{{ article.title}}</h2>
    <div class="metadata">
      <p>Ecrit par {{article.author}} le {{ article.createdAt | date('d/m/Y')}}
        à {{ article.createdAt | date('H:i')}}</p>
    </div>
    <img src="{{ article.image}}"/>
    {{ article.content | raw }}
    <a href="{{ path('article')}}"><button>Lire la suite ...</button></a>

  {% endfor %}
</section>
<section class="iframes">
  <h2>Nous suivre sur les réseaux sociaux</h2>
  <!-- Iframe Twitter -->
    <a class="twitter-timeline" data-theme="dark"
    href="https://twitter.com/rimbaud_tec?ref_src=twsrc%5Etfw"
    width="30%" height="450px">Tweets by rimbaud_tec</a>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  <!-- Iframe Facebook -->
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous"
    src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.3"></script>
    <div class="fb-page" data-href="https://www.facebook.com/IncubateurRimbaudTech/"
    data-tabs="timeline, events" data-width="300px" data-height="450px"
    data-small-header="true" data-adapt-container-width="false"data-hide-cover="false"
    data-show-facepile="false"><blockquote cite="https://www.facebook.com/IncubateurRimbaudTech/"
    class="fb-xfbml-parse-ignore">
    <a href="https://www.facebook.com/IncubateurRimbaudTech/">Rimbaud&#039;Tech</a></blockquote></div>
</section>
{% endblock %}
