{% extends 'base-admin.html.twig' %}

{% block title %}Sélection de la personne dont les photos sont à modifier{% endblock %}

{% block body %}
{% if app.user %}

<section class="titre-back-center">
  <h2 class="h2-back">Sélectionner l'Incubé ou le Co-Worker pour modifier leurs photos</h2>

  <figure>
    <img src="{{asset('img/illustrations/edit.svg')}}" class="icone-back" height="100" width="150">
  </figure>
</section>

  <form action="{{ path('modify-photos')}}" method="POST">
  {% for list in list %}
    <div class="form-group">
      <input type="checkbox" name="utilisateur[]" id="utilisateur" value="{{list.id}}" class="form-input">
      <b>{{list.name}} {{list.firstname}}</b>, {{list.company}},<em> {{list.status}}</em>
      </br>
      </input>
    </div>
{% endfor %}

<button type="submit" class="btn-admin">Modifier</button>
</form>

{% endif %}
{% if not app.user %}
{% include 'rt/admin/accessdenied.html.twig' %}
{% endif %}

{% endblock %}
