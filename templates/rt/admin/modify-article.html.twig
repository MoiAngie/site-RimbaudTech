{% extends 'base-admin.html.twig' %}

{% block title %}Modifier un article{% endblock %}

{% block body %}
<section class="titre-back-center">
  <h2 class="h2-back">Modifier un article</h2>

  <figure>
    <img src="{{asset('img/illustrations/edit.svg')}}" class="icone-back" height="100" width="150">
  </figure>
</section>
  <form action="{{ path('modify-article')}}" method="POST">
  {% for list in list %}
    <div class="form-group">
      <input type="checkbox" name="article[]" id="article" value="{{list.id}}" class="form-input">
    <b>{{list.title}}</b>, par<em>{{list.author}}</em>
      </br>
      </input>
    </div>
{% endfor %}

<button type="submit" class="btn-admin">Modifier</button>
</form>
{% endblock %}
