{% extends 'base-admin.html.twig' %}

{% block title %}Modifier les tarifs{% endblock %}

{% block body %}

<section class="titre-back-center">
  <h2 class="h2-back">Modifier les tarifs</h2>

  <figure>
    <img src="{{asset('img/illustrations/tarifs.svg')}}" class="icone-back" height="100" width="150">
  </figure>
</section>

<form action="{{ path('modify-tarifs')}}" method="POST">
{% for list in list %}
<input type="checkbox" name="tarif[]" id="tarif" value="{{list.id}}">
{{list.comment}}
</br>
</input>
{% endfor %}

<button type="submit" class="btn-admin">Modifier</button>
</form>


{% endblock %}
