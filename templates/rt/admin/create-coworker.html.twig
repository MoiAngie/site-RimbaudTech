{% extends 'base-admin.html.twig' %}

{% block title %}Ajouter un coworker{% endblock %}

{% block body %}
<h2>Ajouter un coworker</h2>

{{ form_start(formCoworker)}}
<div class="form-group">
  {{ form_row(formCoworker.name, {'label': 'Nom', 'attr': {'placeholder' : "Nom de famille du coworker"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.firstname, {'label': 'Prénom', 'attr': {'placeholder' : "Prénom du coworker"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.company, {'label': 'Société', 'attr': {'placeholder' : "Société du coworker"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.status, {'label': 'Statut', 'attr': {'placeholder' : "Statut de l'utilisateur = Co-worker"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.profilpicture, {'label': 'Photo principale', 'attr': {'placeholder' : "Télécharger une photo de profil"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.description, {'label': 'Présentation du projet', 'attr': {'placeholder' : "Projet du coworker"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.comment, {'label': 'Commentaire', 'attr': {'placeholder' : "Avis du coworker sur Rimbaud Tech"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.image1, {'label': 'Image 1', 'attr': {'placeholder' : "Ajouter une image"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.image2, {'label': 'Image 2', 'attr': {'placeholder' : "Ajouter une image"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.image3, {'label': 'Image 3', 'attr': {'placeholder' : "Ajouter une image"}})}}
</div>
<div class="form-group">
  {{ form_row(formCoworker.image4, {'label': 'Image 4', 'attr': {'placeholder' : "Ajouter une image"}})}}
</div>
<button type="submit" class="btn-admin">Publier</button>
{{ form_end(formCoworker)}}

{% endblock %}
