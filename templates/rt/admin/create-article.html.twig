{% extends 'base-admin.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}
<h2>Ajouter un article</h2>

{{ form_start(formArticle)}}
<div class="form-group">
  {{ form_row(formArticle.title, {'label': 'Titre', 'attr': {'placeholder' : "Titre de l'article", 'class' : "form-control"}})}}
</div>
<div class="form-group">
  {{ form_row(formArticle.author, {'label': 'Auteur', 'attr': {'placeholder' : "Ecrit par", 'class' : "form-control"}})}}
</div>
<div class="form-group">
  {{ form_row(formArticle.content, {'label': 'Contenu', 'attr': {'placeholder' : "Ajouter le contenu de l'article", 'class' : "form-control"}})}}
</div>
<div class="form-group">
  {{ form_row(formArticle.image, {'label': 'Image', 'attr': {'placeholder' : "Télécharger une image", 'class' : "form-control"}})}}
</div>
<button type="submit" class="btn-admin">Publier</button>
{{ form_end(formArticle)}}

{% endblock %}
