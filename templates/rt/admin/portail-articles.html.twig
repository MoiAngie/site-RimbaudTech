{% extends 'base-admin.html.twig' %}

{% block title %}Administrer les articles{% endblock %}

{% block body %}
{% if app.user %}
<section class="titre-back-center">
  <h2 class="h2-back">Gérer les articles</h2>

  <figure>
    <img src="{{asset('img/illustrations/articles.svg')}}" class="icone-back" height="100" width="150">
  </figure>
</section>

<section class="btn-back">
  <button class="btn-admin">
    <a href="{{path('create-article')}}">Créer un article</a>
  </button>
  <button class="btn-admin">
    <a href="{{path('modify-article')}}">Modifier un article</a>
  </button>
  <button class="btn-admin">
    <a href="{{path('remove-article')}}">Supprimer un article</a>
  </button>
</section>

{% endif %}
{% if not app.user %}
{% include 'rt/admin/accessdenied.html.twig' %}
{% endif %}

{% endblock %}
