<link href="{{asset('css/css/footerless.css')}}" rel="stylesheet" type="text/css">

{% endblock %}

{% block body %}
{% if hasError %}
    <p>Une erreur est survenue merci de v√©rifier vos identifiants !!</p>
  {% endif %}
  
<form action="{{ path('security_login')}}" method="post">

  <section class="titre-back">
    <h2 class="h2-back">Identifiez-vous pour apporter des modifications au site de Rimbaud'Tech</h2>

    <figure>
      <img src="{{asset('img/illustrations/login.svg')}}" class="icone-back" height="100" width="150">
