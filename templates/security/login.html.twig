{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block stylesheets %}
<link href="{{asset('css/css/creation-admin.css')}}" rel="stylesheet" type="text/css">
<link href="{{asset('css/css/footerless.css')}}" rel="stylesheet" type="text/css">

{% endblock %}

{% block body %}
<form action="{{ path('security_login')}}" method="post">

    <h2>Identifiez-vous pour apporter des modifications au site de Rimbaud'Tech</h2>

    <div class="form-group">
      <input placeholder="Nom d'Utilisateur" required name="_username"
      type="text" class="form-control">
    </div>
    <div class="form-group">
      <input placeholder="Mot de Passe" required name="_password"
      type="password" class="form-control">
    </div>
    <button type="submit" class="btn-admin">Se connecter !</button>

</form>
{% endblock %}
